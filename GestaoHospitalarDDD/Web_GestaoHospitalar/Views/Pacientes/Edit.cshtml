@model Domain_GestaoHospitalar.Models.Paciente

@{
    ViewData["Title"] = "Editar Paciente";
}

<div class="row">
    <div class="panel panel-heading">
        <h3>Editar Paciente</h3>
    </div>
    <div class="panel panel-body">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <partial name="_Edit_Create" />

                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <input type="submit" value="Editar Paciente" class="btn btn-info" />
                    <a asp-controller="Pacientes" asp-action="Index" class="btn btn-default">Voltar para Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}