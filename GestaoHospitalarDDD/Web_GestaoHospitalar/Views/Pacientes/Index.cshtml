@using Web_GestaoHospitalar.ViewComponents.Helpers
@model IEnumerable<Domain_GestaoHospitalar.Models.Paciente>

@{
    ViewData["Title"] = "Lista de Pacientes";
}

<vc:cabecalho-modulos titulo="Gestão Hospitalar" subtitulo="@ViewData["Title"]"></vc:cabecalho-modulos>

<div class="row">
    <partial name="PartialViews/_Estado_Paciente" />
</div>

<div class="row">
    <div class="panel panel-heading">
        <h3>Lista de Pacientes</h3>
    </div>

    <div class="panel panel-body">
        <p>
            <a asp-controller="Pacientes" asp-action="Create" class="btn btn-info"><span class="fa fa-plus-circle" />&nbsp;&nbsp;Adicionar Paciente</a>
        </p>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EstadoPaciente)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataNascimento)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataInternacao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Ativo)
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.Cpf)
                        </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.TipoPaciente)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sexo)
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.Rg)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RgOrgao)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RgDataEmissao)
                        </th>*@
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EstadoPaciente.Descricao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataNascimento)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataInternacao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ativo)
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.Cpf)
                            </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.TipoPaciente)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sexo)
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.Rg)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RgOrgao)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RgDataEmissao)
                            </td>*@
                        <td>
                            <a title="Editar" asp-controller="Pacientes" asp-action="Edit" asp-route-id="@item.Id"><span class="fa fa-pencil fa-2x"></span></a>
                            <a title="Detalhes" asp-controller="Pacientes" asp-action="Details" asp-route-id="@item.Id"><span class="fa fa-search fa-2x"></span></a>
                            <a title="Excluir" asp-controller="Pacientes" asp-action="Delete" asp-route-id="@item.Id"><span class="fa fa-trash fa-2x"></span></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>