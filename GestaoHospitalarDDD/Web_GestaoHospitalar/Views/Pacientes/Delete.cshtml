@model Domain_GestaoHospitalar.Models.Paciente

@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="panel panel-heading">
        <h3>Deseja realmente excluir este paciente do sistema?</h3>
    </div>
    <div class="panel panel-body">
        <div>

            <partial name="_Delete_Details" />
            
            <form asp-controller="Pacientes" asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Excluir Paciente" class="btn btn-danger" />
                <a asp-controller="Pacientes" asp-action="Index" class="btn btn-default">Voltar para Lista</a>
            </form>
        </div>
    </div>
</div>