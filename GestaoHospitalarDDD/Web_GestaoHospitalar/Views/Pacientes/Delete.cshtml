@model Domain_GestaoHospitalar.Models.Paciente

@{
    ViewData["Title"] = "Escluir Paciente";
}

<div class="row">
    <div class="panel panel-heading">
        <h3>Deseja realmente excluir esta informação do sistema?</h3>
    </div>
    <div class="panel panel-body">
        <div>

            <partial name="_Delete_Details" />
            
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value=@ViewData["Title"] class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-default">Voltar para Lista</a>
            </form>
        </div>
    </div>
</div>